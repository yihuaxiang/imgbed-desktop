{
  "name": "imgbed-desktop",
  "version": "1.0.0",
  "description": "Desktop application for imgbed.cn",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac --win --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win --x64",
    "build:win:x64": "electron-builder --win --x64",
    "build:win:ia32": "electron-builder --win --ia32",
    "build:win:portable": "electron-builder --win --x64 --config.win.target=portable",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["electron", "imgbed"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.imgbed.desktop",
    "productName": "图床小镇",
    "downloadAlternateFFmpeg": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "settings.js",
      "shortcut-manager.js",
      "settings-window.js",
      "upload-injector.js",
      "preload-settings.js",
      "settings.html",
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg"],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "图床小镇",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "图床小镇",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": false
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "build/icon.png"
    }
  }
}
